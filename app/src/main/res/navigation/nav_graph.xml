<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/memories">

    <fragment
        android:id="@+id/memories"
        android:name="hu.bme.aut.moblab.memories.view.memories.MemoriesFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_memories">
        <action
            android:id="@+id/action_to_memory_details"
            app:destination="@id/memory_details">
        </action>
        <action
            android:id="@+id/action_to_add_memory"
            app:destination="@id/add_memory" />
    </fragment>

    <fragment
        android:id="@+id/memory_details"
        android:name="hu.bme.aut.moblab.memories.view.memory.MemoryDetailsFragment"
        android:label="Memory details"
        tools:layout="@layout/fragment_memory_details">

        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="isOnline"
            app:argType="boolean" />

        <action
            android:id="@+id/action_to_edit_memory"
            app:destination="@id/edit_memory" />
    </fragment>

    <fragment
        android:id="@+id/add_memory"
        android:name="hu.bme.aut.moblab.memories.view.memory.AddMemoryFragment"
        android:label="Add memory"
        tools:layout="@layout/fragment_add_memory">
    </fragment>

    <fragment
        android:id="@+id/edit_memory"
        android:name="hu.bme.aut.moblab.memories.view.memory.EditMemoryFragment"
        android:label="Add memory"
        tools:layout="@layout/fragment_edit_memory">
        <argument
            android:name="id"
            app:argType="string" />
        <argument
            android:name="memoryId"
            app:argType="string" />
        <argument
            android:name="isOnline"
            app:argType="boolean" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="imageUrls"
            app:argType="string" />
        <argument
            android:name="created"
            app:argType="string" />
    </fragment>

</navigation>